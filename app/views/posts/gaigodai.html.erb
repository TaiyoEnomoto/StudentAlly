<h1 class=“gaigodai”>東京外国語大学</h1>

<img src="https://satokitchen-deai.net/wp-content/uploads/2018/12/%E6%9D%B1%E4%BA%AC%E5%A4%96%E5%9B%BD%E8%AA%9E%E5%A4%A7%E5%AD%A61206.jpg" alt="東京外国語大学の写真" width="800px">
  
<% @posts.each do |t| %>
	<div class="post">
		<%= link_to t.subject, post_path(t.id) %>
		<%= t.kinds %>

		<% if user_signed_in? %>
			<%= link_to t.user.name, user_path(t.user.id) %> 
		<% else %>
			<%= link_to t.user.name, new_user_session_path %>
		<% end %>


		<% if user_signed_in? && current_user.id == t.user_id %>
			<%= link_to "編集する", edit_post_path(t.id) %>
			<%= button_to "削除する", post_path(t.id), method: :delete %>
		<% end %>
	</div>
<% end %>
</div>