<h1 class=“chiba”>東京海洋大学</h1>

<img src="https://portraits.niad.ac.jp/univ/outline/images/0504_0002_%E3%82%AD%E3%83%A3%E3%83%B3%E3%83%91%E3%82%B9%E3%81%AE%E5%A4%96%E8%A6%B31.jpg" alt="東京海洋大学の写真" width="800px">
  
<% @posts.each do |t| %>
	<div class="post">
		<%= link_to t.subject, post_path(t.id) %>
		<%= t.kinds %>

		<% if user_signed_in? %>
			<%= link_to t.user.name, user_path(t.user.id) %> 
		<% else %>
			<%= link_to t.user.name, new_user_session_path %>
		<% end %>


		<% if user_signed_in? && current_user.id == t.user_id %>
			<%= link_to "編集する", edit_post_path(t.id) %>
			<%= button_to "削除する", post_path(t.id), method: :delete %>
		<% end %>
	</div>
<% end %>
</div>